<form class="form-horizontal">
	<h3>{{ _('Communication Settings') }}</h3>
    <div class="control-group" title="{{ _('Serial port to connect to, setting this to AUTO will make OctoPrint try to automatically find the right setting') }}">
		<label class="control-label" for="settings-octokeys-serialPort">{{ _('Serial Port') }}</label>
		<div class="controls">
			<select id="settings-OctoKeys-serialPort" data-bind="options: serial_portOptions, value: settings.plugins.OctoKeys.comport"></select>
		</div>
	</div>
    <div class="control-group" title="{{ _('Serial baud rate to connect with, setting this to AUTO will make OctoPrint try to automatically find the right setting') }}">
        <label class="control-label" for="settings-octokeys-baudrate">{{ _('Baudrate') }}</label>
        <div class="controls">
            <select id="settings-octokeys-baudrate" data-bind="options: settings.plugins.OctoKeys.baudrateOpt, value: settings.plugins.OctoKeys.baudrate"></select>
        </div>
    </div>
	
